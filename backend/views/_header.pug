        .container.sca-container.close-nav
            .ca-container
                a.nav-item.cart-button(href='#')
                    i.fas.fa-shopping-cart.fa-sm
                    p.cart-button-text cart
                .v-line
                if user
                    a.nav-item.account-link.active-account= `Hi, ${user.name.split(' ')[0]}`
                    
                    .nested-account-nav
                        button.account-filter-exit(type='button') &times;
                        a.nested-account-nav-item(href="/me") My Account
                        a.nested-account-nav-item(href="#") My Orders
                        a.nested-account-nav-item(href="#") Track My Order
                        button.nested-account-nav-item.account-logout Log Out

                else
                    a.nav-item.account-link(href='/login') Account
        
