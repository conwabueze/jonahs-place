                a.nested-shop-nav-item(href='#') Air Jordan 4
                a.nested-shop-nav-item(href='#') Air Jordan 5
                a.nested-shop-nav-item(href='#') Air Jordan 7

            a.nav-item.sneaker-link.nike(href='/sneakers/nike') Nike
            .nested-shop-nav.close-dropdown-nav#nike
                a.nested-shop-nav-item(href='#') Air Max
                a.nested-shop-nav-item(href='#') Air Force 1
                a.nested-shop-nav-item(href='#') Blazer
                a.nested-shop-nav-item(href='#') Kobe Bryant
                a.nested-shop-nav-item(href='#') Kyrie Irving
                a.nested-shop-nav-item(href='#') Kevin Durant

            a.nav-item.sneaker-link.adidas(href='/sneakers/adidas') Adidas
