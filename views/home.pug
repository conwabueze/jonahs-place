doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/styles2.css')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Teko:wght@300;400;500;600;700&display=swap')
        script(src='https://kit.fontawesome.com/e556938a57.js' crossorigin='anonymous')
        title Jonah's Place

    body
        include _header

        .content-container
            .inner-content-container
                
                section.home-section.jordan-home
                    img.home-banner.jordan-home-banner(src='/img/jordan-home-banner.jpg' alt='Shop Jordan')
                    .home-headers.jordan-home-headers
                        h1.home-header.jordan-home-header Air Jordan
                        a.home-header.home-header-link.jordan-home-header-link(href='/sneakers/air-jordan') Shop Now

                .bottom-banners
                    section.home-section.nike-home
                        .home-banner-container
                            img.home-banner.nike-home-banner(src='/img/nike-home-banner.jpg' alt='Shop Nike')
                        
                        .home-banner-mobile-container
                            img.home-banner-mobile.jordan-home-banner-mobile(src='/img/nike-home-banner-mobile.jpg' alt='Shop Nike')

                        .home-headers.nike-home-headers
                            h1.home-header.nike-home-header Nike
                            a.home-header.home-header-link.nike-home-header-link(href='/sneakers/nike') Shop Now

                    section.home-section.adidas-home
                        .home-banner-container
                            img.home-banner.adidas-home-banner(src='/img/adidas-home-banner.jpg' alt='Shop Adidas')
                        
                        .home-banner-mobile-container
                            img.home-banner-mobile.jordan-home-banner-mobile(src='/img/adidas-home-banner-mobile-2.jpg' alt='Shop Adidas')
                        
                        .home-headers.adidas-home-headers
                            h1.home-header.adidas-home-header Adidas
                            a.home-header.home-header-link.adidas-home-header-link(href='/sneakers/adidas') Shop Now

                    section.home-section.nb-home
                        .home-banner-container
                            img.home-banner.nb-home-banner(src='/img/nb-home-banner-2.jpg' alt='Shop New Balance')
                        
                        .home-banner-mobile-container
                            img.home-banner-mobile.nb-home-banner-mobile(src='/img/nb-home-banner-mobile-2.jpg' alt='Shop New Balance')
                        
                        .home-headers.nb-home-headers
                            h1.home-header.nb-home-header New Balance
                            a.home-header.home-header-link.nb-home-header-link(href='/sneakers/new-balance') Shop Now


        include _footer

    script(src='/scripts/navScript.js')